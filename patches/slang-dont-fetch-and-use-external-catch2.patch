From 6a47aa7d507b502a5f46d57a5668039a9b874656 Mon Sep 17 00:00:00 2001
From: Will Dietz <will.dietz@sifive.com>
Date: Wed, 5 Oct 2022 14:10:22 -0500
Subject: [PATCH] don't fetch, use external catch2

---
 external/CMakeLists.txt         | 18 +++---------------
 tests/CMakeLists.txt            |  8 +-------
 tools/tidy/tests/CMakeLists.txt |  8 +-------
 3 files changed, 5 insertions(+), 29 deletions(-)

diff --git a/external/CMakeLists.txt b/external/CMakeLists.txt
index 9585b93b..69a046ad 100644
--- a/external/CMakeLists.txt
+++ b/external/CMakeLists.txt
@@ -8,19 +8,13 @@ if(${CMAKE_VERSION} VERSION_GREATER_EQUAL "3.24.0")
   set(find_pkg_args "FIND_PACKAGE_ARGS" "9.0.0")
 endif()
 
-FetchContent_Declare(
-  fmt
-  GIT_REPOSITORY https://github.com/fmtlib/fmt.git
-  GIT_TAG 9.1.0
-  GIT_SHALLOW ON
-  ${find_pkg_args})
 
 # Force fmtlib to always be a static lib if we pull it via FetchContent (i.e.
 # not intercepted by find_package), since it's a private dependency that's
 # mostly header-only already.
 set(saved_build_shared_libs ${BUILD_SHARED_LIBS})
 set(BUILD_SHARED_LIBS OFF)
-FetchContent_MakeAvailable(fmt)
+add_subdirectory(external/fmt)
 set(BUILD_SHARED_LIBS ${saved_build_shared_libs})
 
 if((SLANG_INCLUDE_PYLIB OR BUILD_SHARED_LIBS) AND NOT fmt_FOUND)
@@ -42,13 +36,7 @@ if(${CMAKE_VERSION} VERSION_GREATER_EQUAL "3.24.0")
   set(find_pkg_args "FIND_PACKAGE_ARGS" "2.0.1")
 endif()
 
-FetchContent_Declare(
-  unordered_dense
-  GIT_REPOSITORY https://github.com/martinus/unordered_dense.git
-  GIT_TAG v2.0.0
-  GIT_SHALLOW ON
-  ${find_pkg_args})
-FetchContent_MakeAvailable(unordered_dense)
+add_subdirectory(external/unordered_dense)
 
 if(SLANG_INCLUDE_INSTALL)
   install(
@@ -76,7 +64,7 @@ if(SLANG_INCLUDE_INSTALL)
       PUBLIC_HEADER EXCLUDE_FROM_ALL
       PRIVATE_HEADER EXCLUDE_FROM_ALL)
     install(
-      DIRECTORY ${fmt_SOURCE_DIR}/include/fmt
+      DIRECTORY external/fmt/include/fmt
       DESTINATION ${CMAKE_INSTALL_INCLUDEDIR}
       COMPONENT slang_Development)
   endif()
diff --git a/tests/CMakeLists.txt b/tests/CMakeLists.txt
index 581bc957..b78c6e78 100644
--- a/tests/CMakeLists.txt
+++ b/tests/CMakeLists.txt
@@ -8,13 +8,7 @@ if(${CMAKE_VERSION} VERSION_GREATER_EQUAL "3.24.0")
   set(find_pkg_args "FIND_PACKAGE_ARGS" "3.0.0")
 endif()
 
-FetchContent_Declare(
-  Catch2
-  GIT_REPOSITORY https://github.com/catchorg/Catch2.git
-  GIT_TAG v3.2.1
-  GIT_SHALLOW ON
-  ${find_pkg_args})
-FetchContent_MakeAvailable(Catch2)
+find_package(Catch2 3.2.1 REQUIRED)
 
 if(Catch2_FOUND)
   get_target_property(Catch2_INCLUDE_DIR Catch2::Catch2
diff --git a/tools/tidy/tests/CMakeLists.txt b/tools/tidy/tests/CMakeLists.txt
index 5b680dc7..343e09f7 100644
--- a/tools/tidy/tests/CMakeLists.txt
+++ b/tools/tidy/tests/CMakeLists.txt
@@ -7,13 +7,7 @@ if(${CMAKE_VERSION} VERSION_GREATER_EQUAL "3.24.0")
   set(find_pkg_args "FIND_PACKAGE_ARGS" "3.0.0")
 endif()
 
-FetchContent_Declare(
-  Catch2
-  GIT_REPOSITORY https://github.com/catchorg/Catch2.git
-  GIT_TAG v3.2.1
-  GIT_SHALLOW ON
-  ${find_pkg_args})
-FetchContent_MakeAvailable(Catch2)
+find_package(Catch2 3.2.1 REQUIRED)
 
 if(Catch2_FOUND)
   get_target_property(Catch2_INCLUDE_DIR Catch2::Catch2
